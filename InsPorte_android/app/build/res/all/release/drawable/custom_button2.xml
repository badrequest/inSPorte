<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ffd1b4b6"
                android:centerColor="#ffd1b4b6"
                android:endColor="#ffd1b4b6"
                android:angle="270"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/vermelho_sptrans"
                android:startColor="@color/vermelho_sptrans"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#cdc9c9" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <!-- Botão desabilitado -->
    <item android:state_enabled="false">
        <shape>
            <gradient 
                android:startColor="@color/vermelho_sptrans"
                android:centerColor="@color/vermelho_sptrans"
                android:endColor="@color/vermelho_sptrans" />
            <stroke 
                android:width="1.5dp"
                android:color="@color/azure4" />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Configurações iniciais do botão -->
    <item>        
        <shape>
            <gradient
                android:startColor="@color/vermelho_claro_sptrans"
                android:centerColor="@color/vermelho_claro_sptrans"
                android:endColor="@color/vermelho_claro_sptrans"
                android:angle="270" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
</selector><!-- From: file:/Users/gmarques/Documents/workspaces/inSPorteGitHub/InsPorte_android/app/src/main/res/drawable/custom_button2.xml -->